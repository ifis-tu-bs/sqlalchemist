# Routes
# This file defines all application routes (Higher priority routes first)
#

# Home page
GET           /                                 controllers.Assets.at(path="/public/game", file="index.html")
GET           /admin                            controllers.Assets.at(path="/public/admintool", file="index.html")
GET           /init                             controllers.Application.init()

#SessionController
POST          /login                            controllers.SessionController.create()
GET           /logout                           controllers.SessionController.delete()

#UserController
POST          /signup                           controllers.UserController.create()
POST          /users                            controllers.UserController.edit()
DELETE        /users                            controllers.UserController.destroy()
GET           /users                            controllers.UserController.getAllUsers()
GET           /users/verify/:code                 controllers.UserController.verifyEmail(code: String)
POST          /users/password                     controllers.UserController.sendResetPasswordMail()
POST          /users/dopasswordreset/:code        controllers.UserController.doResetPassword(code: String)
GET           /users/student                      controllers.UserController.checkStudent()
POST          /users/:id                        controllers.UserController.promote(id :Long)

#ItemController
GET           /profile/inventory                controllers.ItemController.inventory()
GET           /profile/scrolls                  controllers.ItemController.scrollCollection()
GET           /profile/belt                     controllers.ItemController.belt()
POST          /profile/belt                     controllers.ItemController.edit()
GET           /profile/used/:id                 controllers.ItemController.used(id: Integer)
POST          /profile/collected                controllers.ItemController.collected()

#SettingsController
GET           /profile/settings                 controllers.SettingsController.index()
POST          /profile/settings                 controllers.SettingsController.edit()

#ChallengeController
GET           /challenge/story                  controllers.ChallengeController.story()
GET           /challenge/skip                   controllers.ChallengeController.skipChallenge()
GET           /challenge/reset                  controllers.ChallengeController.reset()

GET           /taskFile                         controllers.TaskFileController.index()
POST          /taskFile                         controllers.TaskFileController.create()
GET           /taskFile/:id                     controllers.TaskFileController.view(id: Long)
POST          /taskFile/:id                     controllers.TaskFileController.edit(id: Long)
DELETE        /taskFile/:id                     controllers.TaskFileController.destroy(id: Long)
POST          /taskFile/:id/rate                controllers.TaskFileController.rate(id: Long)
POST          /taskFile/:id/comment             controllers.TaskFileController.comment(id: Long)

#SubTaskController
GET           /task/story/:id                   controllers.SubTaskController.story(id: Long)
POST          /task/story/:id                   controllers.SubTaskController.storySolve(id: Long)
GET           /task/trivia/:id                  controllers.SubTaskController.trivia(id: Long)
POST          /task/trivia/:id                  controllers.SubTaskController.triviaSolve(id: Long)
GET           /task/homework                    controllers.SubTaskController.homework()
POST          /task/homework/:id                controllers.SubTaskController.homeworkSolve(id: Long)
GET           /task                             controllers.SubTaskController.index()
GET           /task/:id                         controllers.SubTaskController.view(id: Long)
DELETE        /task/:id                         controllers.SubTaskController.destroy(id: Long)
POST          /task/:id/rate                    controllers.SubTaskController.rate(id: Long)
POST          /task/:id/comment                 controllers.SubTaskController.comment(id: Long)

#ProfileController
GET           /profile                          controllers.ProfileController.index()
GET           /profile/character                controllers.ProfileController.character()
GET           /profile/avatar/:id               controllers.ProfileController.avatar(id: Long)
GET           /profile/reset                    controllers.ProfileController.reset()
GET           /profile/homework                 controllers.ProfileController.getUserHomeworks()
GET           /profile/:id                      controllers.ProfileController.view(id: Long)

#ShopController
GET           /shop                             controllers.ShopController.avatarList()
GET           /shop/avatar                      controllers.ShopController.avatarList()
GET           /shop/belt                        controllers.ShopController.beltList()
GET           /shop/:id                         controllers.ShopController.buy(id: Long)

#HighScoreController
GET           /highscore/points                 controllers.HighScoreController.byPoints()
GET           /highscore/time                   controllers.HighScoreController.byTime()
GET           /highscore/runs                   controllers.HighScoreController.byRuns()
GET           /highscore/sql                    controllers.HighScoreController.bySQL()
GET           /highscore/rate                   controllers.HighScoreController.byRate()
GET           /highscore/coins                  controllers.HighScoreController.byCoins()

#HomeWorkController
GET           /homework                         controllers.HomeWorkController.getAll()
POST          /homework                         controllers.HomeWorkController.create()
GET           /homework/tasks                   controllers.HomeWorkController.getCurrentHomeWorkForCurrentSession()
GET           /homework/students                controllers.HomeWorkController.getAllStudents()
GET           /homework/delete/:id              controllers.HomeWorkController.delete(id: Long)
POST          /homework/result                  controllers.HomeWorkController.getSubmitsForHomeworkTaskFile()
GET           /homework/result/:sid/:hid        controllers.HomeWorkController.getForSubTask(sid: Long, hid: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                     controllers.Assets.at(path="/public/game/assets", file)
GET           /resources/*file                  controllers.Assets.at(path="/public/resources", file)
GET           /adminapp/*file                   controllers.Assets.at(path="/public/admintool/adminapp", file)

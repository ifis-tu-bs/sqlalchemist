    rating                 :JSON.rating

JSON.task.solve:
    statement               :String
    time                    :int

JSON.task.result:
    terry                   :String
    time                    :int

JSON.scroll
    id                      :int
    potion_id               :int
    name                    :int

JSON.collected
    depth                   :int
    coins                   :int
    score                   :int
    scrolls                 :int[]

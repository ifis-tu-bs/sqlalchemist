JSON Models:

// FINAL
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

JSON.signup:
    username                :String
    id                      :String
    password                :String

JSON.login:
    id                      :String
    password                :String
    [admintool              :boolean]

JSON.sign.error:
    id                      :int        // ErrorCode [1 = Taken]
    password                :int        // ErrorCode [1 = Taken]

JSON.user:
    password_old            :String
    password_new            :String

JSON.playerstate:
    username                :String
    settings                :JSON.settings
    student                 :boolean
    coins(current)          :int
    coinlimit               :int

JSON.settings:
    music                   :boolean
    sound                   :boolean

JSON.map
    id                      :int
    path                    :String
    isBossMap               :boolean

JSON.potion:
    id                      :int
    name                    :String
    type                    :int [0 = HEALTH_POTION | 1 = SPEED_OTION | 2 = JUMP_POTION | 3 = DEFENSE_POTION]
    power_level             :int
    buff_value              :int

JSON.attributes:
    health                  :int
    defense                 :int
    speed                   :int
    jump                    :int
    slots                   :int

JSON.avatar:
    id                      :int
    name                    :String
    desc                    :String
    avatarFilename          :String
    soundUrl                :String
    isTeam                  :boolean
    attributes              :JSON.attributes

JSON.story:
    texts                   :JSON.Text[]
    maps                    :JSON.Maps[]
    isTutorial              :boolean
    characterState          :JSON.characterstate

JSON.profile:
    username                :String
    coins                   :int
    points                  :int
    avatar                  :JSON.avatar
    highscore               :JSON.Highscore

JSON.highscore:
    id                      :int
    username                :String
    totalCoins              :int
    totalPoints             :int
    playedTime              :int
    playedRuns              :int
    solvedSQL               :int
    quote                   :float

JSON.highscores:
    highscore               :JSON.highscore

JSON.belt:
    slots                   :int (n)
    slot(1)                 :JSON.potion
    slot(2)                 :JSON.potion
    ...                     :JSON.potion
    ...                     :JSON.potion
    slot(n)                 :JSON.potion

JSON.characterstate:
    attributes              :JSON.attributes
    avatars_current         :JSON.avatar
    avatars_bought          :JSON.avatar[]
    scoll_limit             :int
    inventory               :JSON.inventory
    belt                    :JSON.belt
    scrollCollection        :JSON.ScrollCollection

JSON.scrollCollection
    scrolls:                :JSON.Scrolls[]

JSON.inventory:
    potions                 :JSON.Potion[]

JSON.shopitem:
    id                      :int
    name                    :String
    thumbnail_url           :String
    price                   :int
    isTeam                  :boolean
    purchased               :boolean

